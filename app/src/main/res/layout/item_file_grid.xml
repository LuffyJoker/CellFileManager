<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_124"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.xgimi.filemanager.ui.view.ShadeFrameView
            android:id="@+id/sfv"
            android:layout_width="@dimen/dp_124"
            android:layout_height="@dimen/dp_124"
            android:tag="id" />

        <FrameLayout
            android:layout_width="@dimen/dp_124"
            android:layout_height="@dimen/dp_124"
            android:layout_margin="@dimen/dp_3" />

        <com.xgimi.filemanager.ui.view.StrokeShadeFrameView
            android:layout_width="@dimen/dp_124"
            android:layout_height="@dimen/dp_124"
            android:scaleType="centerCrop" />

        <com.xgimi.filemanager.ui.view.MyCheckbox
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_9"
            android:layout_gravity="right|top"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4" />

        <com.xgimi.filemanager.ui.view.StrokeShadeFrameView
            android:layout_width="@dimen/dp_124"
            android:layout_height="@dimen/dp_124"
            android:scaleType="centerCrop"
            android:src="@mipmap/new_file_icon_doc_dir" />
    </FrameLayout>

    <com.xgimi.leanback.MarqueeTextView
        android:id="@+id/tv_name"
        style="@style/font_body_medium_4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_21"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_5"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true" />

    <com.xgimi.gimiskin.sdk.SkinTextView
        style="@style/font_caption_regular_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/dp_6"
        android:singleLine="true"

        />


</LinearLayout>

