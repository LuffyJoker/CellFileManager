<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_19"
    android:paddingRight="@dimen/dp_19">

    <com.xgimi.gimiskin.sdk.SkinTextView
        android:id="@+id/file_name"
        style="@style/font_body_medium_4"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_4"
        android:scrollHorizontally="false"
        android:singleLine="true" />

    <com.xgimi.gimiskin.sdk.SkinTextView
        android:id="@+id/file_size"
        style="@style/font_body_medium_4"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_4"
        android:scrollHorizontally="false"
        android:singleLine="true"
        android:visibility="gone" />

    <com.xgimi.gimiskin.sdk.SkinTextView
        android:id="@+id/file_from"
        style="@style/font_body_medium_4"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_16"
        android:layout_marginTop="18sp"
        android:scrollHorizontally="false"
        android:singleLine="true" />

    <com.xgimi.gimiskin.sdk.SkinTextView
        android:id="@+id/file_to"
        style="@style/font_body_medium_4"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_4"
        android:scrollHorizontally="false"
        android:singleLine="true" />

    <SeekBar
        android:id="@+id/file_progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_18"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:minHeight="11px"
        android:thumb="@color/color_brand_1"
        android:thumbOffset="0dp" />
</LinearLayout>